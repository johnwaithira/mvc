

<IfModule mod_rewrite.c>
    RewriteEngine On

# Stop processing if already in the /public directory
    RewriteRule ^public/ - [L]

# Static resources if they exist
    RewriteCond %{DOCUMENT_ROOT}/public/ -f
    RewriteRule (.+) public/ [L]
    RewriteRule (.*) public/index.php?route= [L,QSA]
</IfModule>
